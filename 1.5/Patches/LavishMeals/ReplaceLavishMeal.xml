<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <!-- Replaces the meal's graphicClass -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="MealLavish"]/graphicData</xpath>
    <value>
      <graphicData>
        <!-- Uses the atlas to dynamically change the texture -->
        <graphicClass>DynamicMealTextureReplacer.Graphic_IngredientsVariant</graphicClass>
        <texPath>DMTR/LavishMealAtlas/Lavish</texPath>
        <attachments>
          <li>
            <!-- In the case it can't do that, it'll use the default graphic class-->
            <texPath>Things/Item/Meal/Fine</texPath>
            <graphicClass>Graphic_MealVariants</graphicClass>
          </li>
        </attachments>
      </graphicData>
    </value>
  </Operation>

  <!-- Atlas settings and mapping-->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="MealLavish"]</xpath>
    <value>
      <uiIconPath>Things/Item/Meal/Lavish/Lavish_a</uiIconPath>
      <modExtensions>
        <li Class="DynamicMealTextureReplacer.ModExtension_DynamicMealTextureReplacer">
          <widthPixels>288</widthPixels>
          <heightPixels>2304</heightPixels>
          <maxCheckedIngredients>3</maxCheckedIngredients>
          <dimensionsMapping>

            <li>
              <key>
                <thingDefs>
                  <li>RawRice</li>
                </thingDefs>
                <categories>
                  <li>MeatRaw</li>
                </categories>
                <disallowedThingDefs>
                  <li>Meat_Megaspider</li>
                  <li MayRequire="Ludeon.RimWorld.Anomaly">Meat_Twisted</li>
                </disallowedThingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawRice</li>
                </thingDefs>
                <categories>
                  <li>EggsUnfertilized</li>
                  <li>EggsFertilized</li>
                </categories>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawPotatoes</li>
                </thingDefs>
                <categories>
                  <li>MeatRaw</li>
                </categories>
                <disallowedThingDefs>
                  <li>Meat_Megaspider</li>
                  <li MayRequire="Ludeon.RimWorld.Anomaly">Meat_Twisted</li>
                </disallowedThingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawPotatoes</li>
                  <li>Milk</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawCorn</li>
                  <li>Milk</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawRice</li>
                </thingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawPotatoes</li>
                </thingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawCorn</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <categories>
                  <li>MeatRaw</li>
                </categories>
                <disallowedThingDefs>
                  <li>Meat_Megaspider</li>
                  <li MayRequire="Ludeon.RimWorld.Anomaly">Meat_Twisted</li>
                </disallowedThingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>Milk</li>
                </thingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <categories>
                  <li>EggsUnfertilized</li>
                  <li>EggsFertilized</li>
                </categories>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>InsectJelly</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>Meat_Megaspider</li>
                  <li MayRequire="Ludeon.RimWorld.Anomaly">Meat_Twisted</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawFungus</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawBerries</li>
                </thingDefs>
              </key>
              <value>2</value>
            </li>


            <li>
              <key>
                <thingDefs>
                  <li>RawAgave</li>
                </thingDefs>
              </key>
              <value>1</value>
            </li>

          </dimensionsMapping>
        </li>
      </modExtensions>
    </value>
  </Operation>

</Patch>